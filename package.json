{
  "name": "tools_sass",
  "version": "1.0.0",
  "description": "tools for sass. contain some of common mixin and style definition.",
  "main": "index.scss",
  "scripts": {
    "lint": "node_modules/.bin/sass-lint",
    "test": "sass test/test.scss test/test.css",
    "test:watch": "sass --watch test/test.scss:test/test.css",
    "test:liveload": "node_modules/.bin/browser-sync start --server 'test' --files 'test/*.css, test/*.html'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borenXue/tools_sass.git"
  },
  "keywords": [
    "sass",
    "tool"
  ],
  "author": "xbr",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/borenXue/tools_sass/issues"
  },
  "homepage": "https://github.com/borenXue/tools_sass#readme",
  "devDependencies": {
    "browser-sync": "^2.18.12",
    "sass-lint": "^1.10.2"
  }
}
